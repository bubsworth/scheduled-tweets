<div class="d-flex align-items-center justify-content-between">
  <h1>Twitter Accounts</h1>

  <%= link_to "Connect a Twitter account", "auth/twitter", method: :post, class: "btn btn-primary" %>
</div

<% @twitter_accounts.each do |ta| %>
  <div class="d-flex align-items-center mb-4">
    <div class="me-4">
      <%= image_tag ta.image, class: "rounded-circle" %>
      <%= link_to "@#{ta.username}", "https://twitter.com/#{ta.username}", target: :_blank %>
    </div>
    
    <%= button_to "Disconnect", ta, method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>